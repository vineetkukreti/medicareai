# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# AI Service Configuration
# Get your Gemini API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Twilio SMS Configuration
# Get these from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890  # Your Twilio phone number (include country code)

# Admin Contact Information
ADMIN_PHONE_NUMBER=+917983207219  # Phone number to receive SMS notifications

# Email Configuration (Gmail SMTP)
# Get App Password from: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com  # Your Gmail address
SMTP_PASSWORD=your-app-password-here  # Gmail App Password (NOT regular password)
FROM_EMAIL=your-email@gmail.com  # Email to send from
FROM_NAME=MediCareAI

# ElevenLabs Voice AI Configuration
# Get your API key from: https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM  # Default voice (Rachel), or choose your own

# Database Configuration
DATABASE_URL=sqlite:///./medicareai.db  # For production, use PostgreSQL

# Security
SECRET_KEY=your-secret-key-here-change-this-in-production  # For JWT tokens

# Application Settings
APP_NAME=MediCareAI
DEBUG=False  # Set to True for development
